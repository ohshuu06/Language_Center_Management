
@{
    ViewBag.Title = "GradeSchedule";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
@model List<Language_Center_Management.Models.Grade>

<h2>Grade Schedule</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Course ID</th>
            <th>Student ID</th>
            <th>Assignment Code</th>
            <th>Assignment Date</th>
            <th>Assignment Grade</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var grade in Model)
        {
            <tr>
                <td>@grade.Course_ID</td>
                <td>@grade.Student_ID</td>
                <td>@grade.Assignment_Code</td>
                <td>@grade.Assignment_Date.ToString("dd/MM/yyyy")</td>
                <td>@grade.Assignment_Grade</td>
            </tr>
        }
    </tbody>
    
    <div class="mt-3">
        <a href="@Url.Action("TeachingSchedule", "Teacher")" class="btn btn-primary">Back to Home</a>
    </div>
</table>

